{
  "name": "@marubase/container",
  "description": "Marubase's dependency injection manager.",
  "version": "0.0.0",
  "bugs": {
    "url": "https://github.com/marubase/container/issues"
  },
  "files": [
    "build/"
  ],
  "funding": "https://ko-fi.com/endyjasmi",
  "homepage": "https://github.com/marubase/container",
  "keywords": [
    "dependency injection",
    "inversion of control"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": "github:marubase/container",
  "type": "commonjs",
  "main": "./build/commonjs/index.js",
  "module": "./build/module/index.js",
  "types": "./build/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/module/index.js",
      "require": "./build/commonjs/index.js",
      "types": "./build/types/index.d.ts"
    },
    "./*": {
      "import": "./build/module/*",
      "require": "./build/commonjs/*",
      "types": "./build/types/*"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run build:commonjs && npm run build:module && npm run build:types",
    "build:commonjs": "tsc --project tsconfig.commonjs.json && echo '{\"type\":\"commonjs\"}' > build/commonjs/package.json",
    "build:module": "tsc --project tsconfig.module.json && echo '{\"type\":\"module\"}' > build/module/package.json",
    "build:types": "tsc --project tsconfig.types.json",
    "clean": "npm run clean:build && npm run clean:test",
    "clean:build": "del-cli build",
    "clean:test": "del-cli coverage",
    "lint": "eslint --ext .ts,.tsx source",
    "prepare": "npm run clean && npm run lint && npm test && npm run build",
    "test": "jest"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.3",
    "jest-extended": "^1.2.0",
    "jest-mock-extended": "^2.0.4",
    "prettier": "^2.5.0",
    "ts-jest": "^27.0.7",
    "ts-jest-resolver": "^2.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
